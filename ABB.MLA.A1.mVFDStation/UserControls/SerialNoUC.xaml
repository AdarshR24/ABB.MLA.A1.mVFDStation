<UserControl x:Class="ABB.MLA.A1.mVFDStation.UserControls.SerialNoUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation.UserControls"
             mc:Ignorable="d" Name="root"
             Height="Auto" Width="Auto">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding LabelName,ElementName=root}" ></Label>
            <TextBox VerticalContentAlignment="Center" Text="{Binding SerialNo,ElementName=root}" Width="230" Height="23"  IsReadOnly="True" 
                     HorizontalContentAlignment="Center" FontFamily="Abbvoiceoffice" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>
