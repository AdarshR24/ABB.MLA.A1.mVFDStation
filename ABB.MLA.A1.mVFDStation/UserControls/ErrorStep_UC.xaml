<UserControl x:Class="ABB.MLA.A1.mVFDStation.UserControls.ErrorStep_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation.UserControls"
                                    mc:Ignorable="d" Name="root"
             Height="Auto" Width="Auto">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="3">
            <TextBox Text="{Binding ErrorMessage,ElementName=root}" BorderBrush="White"
                     VerticalContentAlignment="Center" IsReadOnly="True" VerticalAlignment="Bottom" 
                     HorizontalContentAlignment="Left" HorizontalAlignment="Left" 
                     FontFamily="Abbvoiceoffice" Height="23" Width="380"  FontSize="13"/>
        </StackPanel>
    </Grid>
</UserControl>
