<UserControl x:Class="ABB.MLA.A1.mVFDStation.UserControls.UnloadingUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation.UserControls"
                        mc:Ignorable="d" 
             Height="Auto" Width="Auto" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0">
            <Label Content="Unoading Station" FontFamily="Abbvoiceoffice" FontWeight="Bold" >
            </Label>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Label Content="Pick" FontFamily="Abbvoiceoffice" Width="48" FontWeight="Bold"></Label>
                <local:TextBoxUc BoxWidth="30"></local:TextBoxUc>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="2">
            <StackPanel Orientation="Horizontal">
                <Label Content="Place" FontFamily="Abbvoiceoffice" Width="48" FontWeight="Bold"></Label>
                <local:TextBoxUc BoxWidth="30"></local:TextBoxUc>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Serial No" FontFamily="Abbvoiceoffice" FontWeight="Bold"/>

            <local:SerialNoUC Grid.Column="1"></local:SerialNoUC>
            <local:SerialNoUC Grid.Column="2"></local:SerialNoUC>

        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Label Content="1 Pole" FontFamily="Abbvoiceoffice" Width="48" FontWeight="Bold"></Label>
                <local:TextBoxUc BoxWidth="30"></local:TextBoxUc>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <StackPanel Orientation="Horizontal">
                <Label Content="2 Pole" FontFamily="Abbvoiceoffice" Width="48" FontWeight="Bold"></Label>
                <local:TextBoxUc BoxWidth="30"></local:TextBoxUc>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Serial No" FontFamily="Abbvoiceoffice" Visibility="Hidden" FontWeight="Bold"/>

            <local:SerialNoUC Grid.Column="1"></local:SerialNoUC>
            <local:SerialNoUC Grid.Column="2"></local:SerialNoUC>

        </Grid>
        <Grid Grid.Row="3" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Label Content="Pass" FontFamily="Abbvoiceoffice" Width="48" FontWeight="Bold"></Label>
                <local:TextBoxUc BoxWidth="30"></local:TextBoxUc>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="2">
            <StackPanel Orientation="Horizontal">
                <Label Content="Fail" FontFamily="Abbvoiceoffice" Width="48" FontWeight="Bold"></Label>
                <local:TextBoxUc BoxWidth="30"></local:TextBoxUc>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
