<UserControl x:Class="ABB.MLA.A1.mVFDStation.UserControls.StatusUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation.UserControls"
             mc:Ignorable="d" Name="root"
             Height="Auto" Width="Auto">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label FontFamily="Abbvoiceoffice" FontWeight="Bold" Content="{Binding LabelName,ElementName=root}" Width="75" ></Label>
            <TextBox Text="{Binding StatusMessage,ElementName=root}" Background="Silver" VerticalContentAlignment="Center" IsReadOnly="True" 
                     HorizontalContentAlignment="Left" HorizontalAlignment="Left" FontFamily="Abbvoiceoffice" Height="23" Width="690"  FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>
