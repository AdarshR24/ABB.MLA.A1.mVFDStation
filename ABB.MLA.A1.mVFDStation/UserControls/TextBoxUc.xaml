<UserControl x:Class="ABB.MLA.A1.mVFDStation.UserControls.TextBoxUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation.UserControls"
             mc:Ignorable="d" x:Name="root"
             Height="Auto" Width="Auto">
    <Grid>
        <TextBox Width="{Binding BoxWidth,ElementName=root}" Text="{Binding value,ElementName=root}" HorizontalContentAlignment="Center" 
                 BorderBrush="{Binding Color,ElementName=root}" VerticalContentAlignment="Center" 
                 HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" ></TextBox>
    </Grid>
</UserControl>
