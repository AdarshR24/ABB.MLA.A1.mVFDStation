<UserControl x:Class="ABB.MLA.A1.mVFDStation.UserControls.TestingUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation.UserControls"
             mc:Ignorable="d" x:Name="root"
             Height="Auto" Width="Auto" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.03*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="Testing" HorizontalAlignment="Left" FontWeight="Bold" FontFamily="Abbvoiceoffice"></Label>
            <Label Content="CycleTime(s):" HorizontalAlignment="Right" FontWeight="Bold" FontFamily="Abbvoiceoffice"></Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Serial No" FontFamily="Abbvoiceoffice" FontWeight="Bold"/>
            <Grid Grid.Column="3">
                <local:TextBoxUc Color="White"></local:TextBoxUc>
            </Grid>
            <local:SerialNoUC SerialNo="{Binding StationDetails.SerialNo1,ElementName=root}" Grid.Column="1"></local:SerialNoUC>
            <local:SerialNoUC SerialNo="{Binding StationDetails.SerialNo2,ElementName=root}" Grid.Column="2"></local:SerialNoUC>

        </Grid>
        <Grid Grid.Row="2">
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>

            <local:SerialNoUC SerialNo="{Binding StationDetails.SerialNo3,ElementName=root}" Grid.Column="1"></local:SerialNoUC>
            <local:SerialNoUC SerialNo="{Binding StationDetails.SerialNo4,ElementName=root}" Grid.Column="2"></local:SerialNoUC>

        </Grid>

        <Grid Grid.Row="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:InitUc Grid.Column="3" HorizontalAlignment="Right" ></local:InitUc>
        </Grid>
        <Grid Grid.Row="11">
            <local:StatusUc LabelName="Status "></local:StatusUc>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Endurance" FontFamily="Abbvoiceoffice" FontWeight="Bold"></Label>
            <local:TextBoxUc value="{Binding StationDetails.EdrRes1,ElementName=root}" Grid.Column="1"></local:TextBoxUc>
            <local:TextBoxUc value="{Binding StationDetails.EdrRes2,ElementName=root}" Grid.Column="2"></local:TextBoxUc>
            <local:TextBoxUc value="{Binding StationDetails.EdrRes3,ElementName=root}" Grid.Column="3"></local:TextBoxUc>
            <local:TextBoxUc value="{Binding StationDetails.EdrRes4,ElementName=root}" Grid.Column="4"></local:TextBoxUc>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="5" HorizontalAlignment="Right" Grid.ColumnSpan="2">
                <Label Content="Endurance(SV)" FontFamily="Abbvoiceoffice" FontWeight="Bold"></Label>
                <local:TextBoxUc></local:TextBoxUc>
            </StackPanel>
            
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Trip" FontFamily="Abbvoiceoffice" FontWeight="Bold"></Label>
            <local:TextBoxUc value="{Binding StationDetails.TripRes1,ElementName=root}" Grid.Column="1"></local:TextBoxUc>
            <local:TextBoxUc value="{Binding StationDetails.TripRes2,ElementName=root}" Grid.Column="2"></local:TextBoxUc>
            <local:TextBoxUc value="{Binding StationDetails.TripRes3,ElementName=root}" Grid.Column="3"></local:TextBoxUc>
            <local:TextBoxUc value="{Binding StationDetails.TripRes4,ElementName=root}" Grid.Column="4"></local:TextBoxUc>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="5" HorizontalAlignment="Right" Grid.ColumnSpan="2">
                <Label Content="Trip(SV)" FontFamily="Abbvoiceoffice" FontWeight="Bold"></Label>
                <local:TextBoxUc></local:TextBoxUc>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="6">
            <StackPanel Orientation="Horizontal">
                <Button Height="23" Command="{Binding StationDetails.mVButtonCommand,ElementName=root}" Width="80" Content="mV" 
         Style="{StaticResource Button_all}"></Button>
                <Button Height="23" Width="80" Command="{Binding StationDetails.FDButtonCommand,ElementName=root}" Content="FD" 
         Style="{StaticResource Button_all}"></Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="7" Grid.RowSpan="3">
            <local:mVTestUc
                Visibility="{Binding StationDetails.mVVisible,ElementName=root}"
                P1="{Binding StationDetails.P1,ElementName=root}"
                P2="{Binding StationDetails.P2,ElementName=root}"
                P3="{Binding StationDetails.P3,ElementName=root}"
                P4="{Binding StationDetails.P4,ElementName=root}"
                P1Brush="{Binding StationDetails.P1Brush,ElementName=root}"
                P2Brush="{Binding StationDetails.P2Brush,ElementName=root}"
                P3Brush="{Binding StationDetails.P3Brush,ElementName=root}"
                P4Brush="{Binding StationDetails.P4Brush,ElementName=root}"

                ></local:mVTestUc>
            <local:FDTestUc
                Visibility="{Binding StationDetails.FDVisible,ElementName=root}"
                F1Data="{Binding StationDetails.F1Text,ElementName=root}"
                F2Data="{Binding StationDetails.F2Text,ElementName=root}"
                D2Data="{Binding StationDetails.D2Text,ElementName=root}"
                D1Data="{Binding StationDetails.D1Text,ElementName=root}"

                F1Brush="{Binding StationDetails.F1Brush,ElementName=root}"
                D1Brush="{Binding StationDetails.D1Brush,ElementName=root}"
                F2Brush="{Binding StationDetails.F2Brush,ElementName=root}"
                D2Brush="{Binding StationDetails.D2Brush,ElementName=root}"
                ></local:FDTestUc>
           
        </Grid>
    </Grid>
</UserControl>
