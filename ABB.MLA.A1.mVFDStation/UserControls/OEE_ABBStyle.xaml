<UserControl x:Class="ABB.MLA.A1.mVFDStation.UserControls.OEE_ABBStyle"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation.UserControls"
             mc:Ignorable="d" 
             x:Name="root"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"             
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             Height="Auto" Width="Auto">
    <UserControl.Resources>

    </UserControl.Resources>

    <Grid Background="White" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" MinHeight="60">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox MaxWidth="200" VerticalAlignment="Stretch" HorizontalAlignment="Right">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Right">
                <lvc:Gauge Name="s" Grid.Row="0" Grid.Column="0" Margin="5" 
                   Uses360Mode="True"  InnerRadius="9" GaugeBackground="DarkGray" GaugeActiveFill="Black"
                   From="0" To="100" Value="{Binding OEEValue}" RenderTransformOrigin="0.5,0.5" >
                    <lvc:Gauge.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </lvc:Gauge.RenderTransform>
                </lvc:Gauge>

            </Grid>
        </Viewbox>
        <Label Content="{Binding OEEDisp,ElementName=root}" 
               HorizontalAlignment="Center"
               VerticalAlignment="Center"></Label>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Content="OEE" 
               Margin="20,0,0,0" FontWeight="SemiBold"
               FontSize="15" HorizontalContentAlignment="Left"></Label>

        <Grid Grid.Row="1">
            <Viewbox MaxHeight="180">
                <Grid >
                    <lvc:Gauge Name="s1" Grid.Row="0" Grid.Column="0" Margin="5" 
                Uses360Mode="True"  InnerRadius="9" GaugeBackground="DarkGray" GaugeActiveFill="Black"
                From="0" To="100" Value="{Binding OEEValue}" RenderTransformOrigin="0.5,0.5" >
                        <lvc:Gauge.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="180"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </lvc:Gauge.RenderTransform>
                    </lvc:Gauge>

                </Grid>
            </Viewbox>
            <Label HorizontalAlignment="Left" VerticalAlignment="Top" Content="A" 
        Margin="20,0,0,0" FontWeight="SemiBold"
        FontSize="15" HorizontalContentAlignment="Left"></Label>
            <Label Content="{Binding OEEDisp,ElementName=root}" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"

></Label>
        </Grid>
        <Grid Grid.Row="2">
            <Label HorizontalAlignment="Left" VerticalAlignment="Top" Content="P" 
        Margin="20,0,0,0" FontWeight="SemiBold"
        FontSize="15" HorizontalContentAlignment="Left"></Label>
            <Viewbox MaxHeight="180">
                <Grid >
                    <lvc:Gauge Name="s2" Grid.Row="0" Grid.Column="0" Margin="5" 
                Uses360Mode="True"  InnerRadius="9" GaugeBackground="DarkGray" GaugeActiveFill="Black"
                From="0" To="100" Value="{Binding OEEValue}" RenderTransformOrigin="0.5,0.5" >
                        <lvc:Gauge.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="180"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </lvc:Gauge.RenderTransform>
                    </lvc:Gauge>

                </Grid>
            </Viewbox>
            <Label Content="{Binding OEEDisp,ElementName=root}" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"

></Label>
        </Grid>
        <Grid Grid.Row="3">
            <Label HorizontalAlignment="Left" VerticalAlignment="Top" Content="Q" 
        Margin="20,0,0,0" FontWeight="SemiBold"
        FontSize="15" HorizontalContentAlignment="Left"></Label>
            <Viewbox MaxHeight="180">
                <Grid >
                    <lvc:Gauge Name="s3" Grid.Row="0" Grid.Column="0" Margin="5" 
                Uses360Mode="True"  InnerRadius="9" GaugeBackground="DarkGray" GaugeActiveFill="Black"
                From="0" To="100" Value="{Binding Quality}" RenderTransformOrigin="0.5,0.5" >
                        <lvc:Gauge.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="180"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </lvc:Gauge.RenderTransform>
                    </lvc:Gauge>

                </Grid>
            </Viewbox>
            <Label Content="{Binding OEEDisp,ElementName=root}" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"

></Label>
        </Grid>
    </Grid>
</UserControl>
