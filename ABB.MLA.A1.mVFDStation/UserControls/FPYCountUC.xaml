<UserControl x:Class="ABB.MLA.A1.mVFDStation.UserControls.FPYCountUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation.UserControls"
                                   mc:Ignorable="d" x:Name="root"
             Height="Auto" Width="Auto" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <Label Content="{Binding poleContent,ElementName=root}" FontWeight="Bold" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" ></Label>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0">
            <Label Content="TOTAL" FontWeight="Bold" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <Label Content="FPY" FontWeight="Bold" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0">
            <Label Content="0" FontWeight="Bold" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2">
            <Label Content="0" FontWeight="Bold" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0">
            <Label Content="PASS" FontWeight="Bold" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="2">
            <Label Content="QFPY" FontWeight="Bold" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="0">
            <Label Content="0" FontWeight="Bold" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="2">
            <Label Content="0" FontWeight="Bold" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"></Label>
        </Grid>
        <Rectangle Fill="Red" Grid.Row="1" Grid.Column="1" Width="2" Height="140"
                   Grid.RowSpan="5"></Rectangle>
    </Grid>

</UserControl>
