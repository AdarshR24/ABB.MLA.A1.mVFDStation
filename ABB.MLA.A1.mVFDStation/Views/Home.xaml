<Page x:Class="ABB.MLA.A1.mVFDStation.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation.Views"
      xmlns:UC="clr-namespace:ABB.MLA.A1.mVFDStation.UserControls" xmlns:mvfdstation="clr-namespace:ABB.MLA.A1.mVFDStation"
      mc:Ignorable="d" 
       d:DesignHeight="690" d:DesignWidth="1500" 
      Title="Home" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="0.01*"/>
            <RowDefinition Height="3.8*"/>
            <RowDefinition Height="0.01*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="0.01*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.01*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.9*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Row="1" Grid.ColumnSpan="2" Fill="Black"></Rectangle>
        <Rectangle Grid.Row="3" Grid.ColumnSpan="2" Fill="Black"></Rectangle>
        <Rectangle Grid.Row="5" Grid.ColumnSpan="2" Fill="Black"></Rectangle>
        <Rectangle Grid.Row="7" Grid.ColumnSpan="2" Fill="Black"></Rectangle>
        <Grid Grid.Row="0">
            <UC:LoadingStationUc StationDetails="{Binding LoadingData,UpdateSourceTrigger=PropertyChanged}" ></UC:LoadingStationUc>
        </Grid>
        <Grid Grid.Row="2">
            <UC:TestingUc StationDetails="{Binding TestData,UpdateSourceTrigger=PropertyChanged}"></UC:TestingUc>
        </Grid>
        <Grid Grid.Row="4">
            <UC:UnloadingUC StationDetails="{Binding UnloadingData,UpdateSourceTrigger=PropertyChanged}"></UC:UnloadingUC>
        </Grid>
        <Grid Grid.Row="6">
            <mvfdstation:StepModeUC></mvfdstation:StepModeUC>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="9">
            <UC:OEE_ABBStyle></UC:OEE_ABBStyle>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"/>
                <RowDefinition/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <UC:FPYCountUC Grid.Row="1" poleContent="1 POLE"></UC:FPYCountUC>
            <UC:FPYCountUC Grid.Column="2" Grid.Row="1" poleContent="2 POLE"></UC:FPYCountUC>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <UC:ErrorStep_UC VerticalAlignment="Bottom"></UC:ErrorStep_UC>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <UC:ErrorStep_UC VerticalAlignment="Bottom"></UC:ErrorStep_UC>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1">
            <UC:ErrorStep_UC VerticalAlignment="Bottom"></UC:ErrorStep_UC>
        </Grid>
    </Grid>
</Page>
