<Window x:Class="ABB.MLA.A1.mVFDStation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ABB.MLA.A1.mVFDStation"
        mc:Ignorable="d"
           Title="MainWindow" Height="1080" Width="1920"  WindowStyle="None" WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="115"/>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="6"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.ColumnSpan="9" Background="Black"/>

            <Rectangle Visibility="{Binding Navigation.Visiblities[0]}"  Fill="Blue" Grid.Row="2" Grid.Column="0"/>

            <Rectangle  Visibility="{Binding Navigation.Visiblities[1]}" Fill="Blue" Grid.Row="2" Grid.Column="1"/>
            <Rectangle  Visibility="{Binding Navigation.Visiblities[2]}" Fill="Blue" Grid.Row="2" Grid.Column="2"/>
            <Rectangle Visibility="{Binding Navigation.Visiblities[3]}" Fill="Blue" Grid.Row="2" Grid.Column="3"/>
            <Rectangle Visibility="{Binding Navigation.Visiblities[4]}" Fill="Blue" Grid.Row="2" Grid.Column="4"/>
            <Rectangle Visibility="{Binding Navigation.Visiblities[5]}" Fill="Blue" Grid.Row="2" Grid.Column="5"/>
            <Rectangle  Visibility="{Binding Navigation.Visiblities[6]}" Fill="Blue" Grid.Row="2" Grid.Column="6"/>
            <Rectangle  Visibility="{Binding Navigation.Visiblities[7]}" Fill="Blue" Grid.Row="2" Grid.Column="7"/>
            <Label Content="EMAX Welding 6.2" Foreground="White" FontWeight="Bold" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="5" 
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" Margin="0,0,0,0"/>
            <!--<Image Source="CustomerLogo.png" Grid.Column="8"/>-->
            <Label Content="ABB" Background="Black" Foreground="White"
               FontFamily="ABB logo Plain" Grid.Row="0" Grid.Column="0" FontSize="22"
               VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Label Foreground="White" VerticalAlignment="Center" FontSize="16">Shift</Label>
                <Label VerticalAlignment="Center" Foreground="WhiteSmoke" Margin="10,0,0,0" FontSize="17" Content="{Binding CurrentShift}"></Label>
            </StackPanel>
            <!--<StackPanel Orientation="Vertical" Grid.Column="8" Height="40">
            <Image Source="/Views/JVB_LOGO.png" Grid.Column="8" Stretch="None"/>
        </StackPanel>-->

            <Button x:Name="Home_btn" BorderBrush="White" Focusable="False" BorderThickness="0" Background="White" Grid.Column="0" Grid.Row="1"
                Command="{Binding HomeCommand}"
                >
                <StackPanel Orientation="Vertical" >
                    <Image Source="/Resources/Images/abb_home_24.png" Stretch="None" Width="50"/>
                    <Label Content="HOME" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button  BorderBrush="White" Focusable="False" BorderThickness="0"  Background="White" Grid.Column="1" Grid.Row="1" 
                Command="{Binding ManualCommand}"
                >
                <StackPanel Orientation="Vertical">
                    <Image Source="/Resources/Images/manuall.png" Stretch="None" Width="50"/>
                    <Label Content="MANUAL" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button x:Name="Parameter_btn" BorderBrush="White" BorderThickness="0" Focusable="False" Background="White"
                Grid.Column="2" Grid.Row="1" Command="{Binding ParameterCommand}" >
                <StackPanel Orientation="Vertical" >
                    <Image Source="/Resources/Images/parameter.png" Stretch="None" Width="50"/>
                    <Label Content="PARAMETER" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button x:Name="Database_btn" BorderBrush="White" BorderThickness="0" Focusable="False" Background="White"
                Grid.Column="3" Grid.Row="1"  Command="{Binding DatabaseCommand}" >
                <StackPanel Orientation="Vertical">
                    <Image Source="/Resources/Images/database.png" Stretch="None" Width="50"/>
                    <Label Content="DATABASE" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button x:Name="Downgrade_btn" BorderBrush="White" BorderThickness="0" Focusable="False" Command="{Binding DowngradeCommand}"
                Background="White" Grid.Column="4" Grid.Row="1" >
                <StackPanel Orientation="Vertical">
                    <Image Source="/Resources/Images/downgrad.png" Stretch="None" Width="50"/>
                    <Label Content="DOWNGRADE" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button  BorderBrush="White" BorderThickness="0" Focusable="False" Width="200" Background="White" Grid.Column="4" 
                 Grid.Row="1"  Grid.ColumnSpan="3" Height="64"  Command="{Binding ReportCommand}"
                 Margin="144,0,144,0" VerticalAlignment="Top">
                <StackPanel Orientation="Vertical">
                    <Image Source="/Resources/Images/report.png" Stretch="None" Width="50"/>
                    <Label Content="REPORT" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button x:Name="Calibration_btn" BorderBrush="White" BorderThickness="0" Focusable="False" Background="White" Grid.Column="6" Grid.Row="1" >
                <StackPanel Orientation="Vertical">
                    <Image Source="/Resources/Images/Validat.png" Stretch="None" Width="50"/>
                    <Label Content="CALIBRATION" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button x:Name="Quality_btn" BorderBrush="White" BorderThickness="0" Focusable="False"  Command="{Binding MaintenanceCommand}"
                Background="White" Grid.Column="7" Grid.Row="1" >
                <StackPanel Orientation="Vertical">
                    <Image Source="/Resources/Images/parameter.png" Stretch="None" Width="50"/>
                    <Label Content="MAINTENANCE" FontWeight="Bold"/>
                </StackPanel>
            </Button>
            <Button x:Name="Exit_btn"  BorderBrush="White" BorderThickness="0" Focusable="False" Background="White" Grid.Column="8" Grid.Row="1" 
                Command="{Binding CloseCommand}">
                <StackPanel Orientation="Vertical">
                    <Image Source="/Resources/Images/exitt.png" Stretch="None" Width="50"/>
                    <Label Content="EXIT" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

        </Grid>
        <Frame Name="Pagewindow" Grid.Row="2" NavigationUIVisibility="Hidden"/>
        <Frame Grid.Row="2" Height="105" Name="GANT" Width="1450" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="90,0,0,4" />
        <Rectangle Grid.Row="1" Fill="red" Width="50" HorizontalAlignment="Left" Margin="2,0,0,0"></Rectangle>
        <Label Grid.Row="2"  HorizontalAlignment="Right" VerticalAlignment="Bottom" 
           ToolTip="Author: Sreejith Ataritech 02/10/2023" Margin="0,0,20,0"></Label>
        <DockPanel Grid.Row="3">
            <Frame  Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" ></Frame>

        </DockPanel>
    </Grid>
</Window>
